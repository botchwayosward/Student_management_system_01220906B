<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<StackPane prefHeight="450" prefWidth="650" xmlns:fx="http://javafx.com/fxml" fx:controller="com.sms.ui.LoginController">
    <stylesheets>
        <URL value="@login-style.css" />
    </stylesheets>

    <VBox alignment="CENTER" spacing="25" maxWidth="380" maxHeight="350" styleClass="login-card">
        <VBox alignment="CENTER" spacing="5">
            <Label text="SMS" styleClass="title-label"/> <Label text="Student Management System" styleClass="subtitle-label"/>
        </VBox>

        <VBox spacing="15">
            <VBox spacing="5">
                <Label text="Username" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <TextField fx:id="txtUser" promptText="Enter your username"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                <PasswordField fx:id="txtPass" promptText="Enter your password"/>
            </VBox>
        </VBox>

        <Button text="LOGIN" onAction="#handleLogin" maxWidth="Infinity" styleClass="login-button"/>

        <Label fx:id="lblError" text="" style="-fx-text-fill: #e74c3c; -fx-font-size: 12;"/>
    </VBox>
</StackPane>